extends ../layout

block content 
    form(method='POST' action='/users/' + users.customer_id + '/edit')
        div.mb-3
            label(for="email" class="form-label") Email address
            input(
                type="email"
                name="email"
                class='form-control'
                value = users.email 
                id="email"
                aria-describedby="emailHelp"
                required
                )
            div(id="emailHelp" class="form-text") We'll never share your email with anyone else.
        div(class='row')
            button.btn.btn-primary.me-2(type='submit') Submit
            button.btn.btn-warning.ml-2(type='button' onclick =`window.location.href='/users/${users.customer_id}/details'`) Cancel
    
    