extends ../layout 

block content
    div(style="text-align: right;")
        a(href="/") Terug naar Home
    table.table.table-striped
        thead
            tr
                th.col ID
                th.col First Name
                th.col Last Name
                th.col Email
                th.col Active
                th.col 
                
        tbody
            each user in users
                tr
                  td #{user.customer_id}
                  td #{user.first_name}
                  td #{user.last_name}
                  td #{user.email}
                  td 
                    if user.active === 1
                      span.badge.bg-success Yes
                    else
                      span.badge.bg-danger No
                  td 
                     a.btn.btn-primary(href='/users/' + user.customer_id + '/details') Details
